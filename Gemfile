  gem 'pry-byebug'
  gem 'rspec-rails'
  gem 'shoulda-matchers', require: false
  gem 'simplecov', require: false
  gem 'spring'
  gem 'timecop'
end

group :test do
  gem 'json_spec'
  gem 'webmock'
end

group :doc do
